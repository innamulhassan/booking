# Therapy Booking System - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production
APP_NAME=Therapy Booking System
VERSION=2.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MySQL Database Settings
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=Ishak@123
DB_NAME=booking
DB_PORT=3306

# Alternative: Full database URL (overrides individual DB_* settings)
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/booking?charset=utf8mb4

# Database Pool Settings
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# =============================================================================
# WHATSAPP & MESSAGING CONFIGURATION
# =============================================================================
# Primary WhatsApp Provider (ultramsg, twilio, or telegram)
WHATSAPP_PROVIDER=ultramsg

# UltraMsg Configuration (Recommended)
ULTRAMSG_INSTANCE_ID=your_ultramsg_instance_id
ULTRAMSG_TOKEN=your_ultramsg_token
ULTRAMSG_BASE_URL=https://api.ultramsg.com

# Twilio Configuration (Backup/Alternative)
WHATSAPP_TOKEN=your_twilio_auth_token
WHATSAPP_SID=your_twilio_account_sid
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
SANDBOX_MODE=false

# WhatsApp Business API (Meta/Facebook)
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_VERIFY_TOKEN=therapy_booking_webhook_verify

# =============================================================================
# AI CONFIGURATION
# =============================================================================
# Primary AI Provider (gemini, claude, openai)
AI_PROVIDER=gemini

# Google AI Configuration
GOOGLE_API_KEY=your_google_api_key
GOOGLE_GENAI_MODEL=gemini-1.5-pro-002
GOOGLE_GENAI_USE_VERTEXAI=false

# Google ADK (Agent Development Kit) - Legacy
GEMINI_API_KEY=your_legacy_gemini_key
GEMINI_MODEL=gemini-pro
ADK_AGENT_CONFIG=config/agent_config.json
GOOGLE_ADK_PROJECT_ID=your_gcp_project_id
GOOGLE_ADK_AGENT_ID=your_adk_agent_id

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key
CLAUDE_MODEL=claude-sonnet-4-20250514

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4

# =============================================================================
# THERAPY PRACTICE CONFIGURATION
# =============================================================================
# Clinic Information
CLINIC_NAME=Wellness Therapy Center
THERAPIST_NAME=Dr. Sarah Smith
CLINIC_ADDRESS=123 Health Street, Wellness City, Qatar
EMERGENCY_CONTACT=(555) 123-4567
CRISIS_CENTER=Qatar Crisis Support Center

# Phone Numbers (CRITICAL - Update with your numbers)
AGENT_PHONE_NUMBER=+97451334514
COORDINATOR_PHONE_NUMBER=+97471669569

# Legacy Compatibility
THERAPIST_PHONE=+97471669569

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/therapy_booking.log

# =============================================================================
# WEBHOOK ENDPOINTS
# =============================================================================
# Your public domain/ngrok URL for webhooks
CLIENT_WEBHOOK_URL=https://your-domain.com/api/webhooks/ultramsg
THERAPIST_WEBHOOK_URL=https://your-domain.com/api/webhooks/therapist

# =============================================================================
# SECURITY & MONITORING
# =============================================================================
# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Health Check Settings
HEALTH_CHECK_TIMEOUT=30
METRICS_ENABLED=false

# File Upload Settings
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================
# Redis (for caching - optional)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_if_using_sentry

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Only used in development
RELOAD_ON_CHANGE=true
SHOW_DOCS=true
ENABLE_DEBUG_ROUTES=true

# Test Database (optional, for testing)
TEST_DATABASE_URL=sqlite:///./test_therapy_booking.db

# =============================================================================
# PRODUCTION NOTES
# =============================================================================
# In production, make sure to:
# 1. Set ENVIRONMENT=production
# 2. Set DEBUG=false
# 3. Use strong SECRET_KEY
# 4. Configure proper CORS_ORIGINS
# 5. Use production database credentials
# 6. Set up proper SSL certificates
# 7. Configure monitoring and logging
# 8. Set up backup strategies